<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowlistcontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/innercontainer"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/patientimagecont"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/patientimage"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/patientdetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/patientimagecont"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/patientname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/darktextcolor"/>

            <TextView
                android:id="@+id/patientmrnumber"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/patientname"
                android:gravity="center_vertical"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/patientmobilenumber"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/patientmrnumber"
                android:gravity="center_vertical"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/patientid"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/patientmrnumber"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/patientimagevalue"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/patientmrnumber"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:textSize="14sp"/>

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
